<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Create a new Post here</h1>
    </div>
    <br />

    <form action="/blogs" method="POST">
        <div class="form-group">
            <input
                class="form-control"
                type="text"
                name="name"
                placeholder="Title"
            />
        </div>
        <div class="form-group">
            <input
                class="form-control"
                type="text"
                name="image"
                placeholder="Image"
            />
        </div>
        <div class="form-group">
            <input
                class="form-control"
                type="text"
                name="description"
                placeholder="Short-Description"
            />
        </div>
        <div class="form-group">
            <input
                class="form-control"
                type="text"
                name="message"
                placeholder="Message"
            />
        </div>
        <div class="form-group">
            <input class="btn btn-success btn-lg" type="submit" />
        </div>
    </form>
</div>

<% include partials/footer %>
